@using System.Data
@{
    DataTable dt = new DataTable();
    dt = Model;
}
<style>
    table.dataTable thead > tr > th.sorting, table.dataTable thead > tr > th.sorting_asc, table.dataTable thead > tr > th.sorting_desc, table.dataTable thead > tr > th.sorting_asc_disabled, table.dataTable thead > tr > th.sorting_desc_disabled, table.dataTable thead > tr > td.sorting, table.dataTable thead > tr > td.sorting_asc, table.dataTable thead > tr > td.sorting_desc, table.dataTable thead > tr > td.sorting_asc_disabled, table.dataTable thead > tr > td.sorting_desc_disabled {
        padding-right: 0px !important;
    }

    table.dataTable th.dt-type-numeric, table.dataTable th.dt-type-date,
    table.dataTable td.dt-type-numeric,
    table.dataTable td.dt-type-date {
        text-align: left !important;
    }
    .tblth{
        vertical-align:middle !important;
        font-size:8px !important;
    }
    .tbltd {
        vertical-align: middle !important;
        font-size: 8px !important;
    }
    .table > :not(caption) > * > * {
        padding:0px !important;
    }
</style>
<div class="bg-light rounded h-100 p-4">
    <div class="table-responsive">
        <table class="table table-bordered table-striped small tblfont" id="tbl">
            <thead class="text-center">
                <tr>
                    <th class="text-center tblth">Srno.</th>
                    <th class="text-center tblth">Screening<br /> Types</th>
                    <th class="text-center tblth">Survey Date</th>
                    <th class="text-center tblth">Household ID</th>
                    <th class="text-center tblth">Household <br />head name</th>
                    <th class="text-center tblth">No of Member</th>
                    <th class="text-center tblth">Member Id</th>
                    <th class="text-center tblth">Member Name</th>
                    <th class="text-center tblth">HHHead<br /> Mobile No</th>
                    <th class="text-center tblth">Age</th>
                    <th class="text-center tblth">Sex</th>
                    <th class="text-center tblth">Whether the NCD mitra has ASHA+ device?  </th>

                    <th class="text-center tblth">Whether the member is already a patient of hypertension?</th>
                    <th class="text-center tblth">If yes, whether the person is continuing with medication?</th>
                    <th class="text-center tblth">If yes, whom does he/she consults for medication?</th>
                    <th class="text-center tblth">If Other, whether the person is continuing with medication?</th>

                    <th class="text-center tblth">Whether the member is already a patient of diabetes?</th>
                    <th class="text-center tblth">If yes, whether the person is continuing with medication?</th>
                    <th class="text-center tblth">If Other, whether the person is continuing with medication?</th>
                    <th class="text-center tblth">If yes, whom does he/she consults for medication?</th>

                    <th class="text-center tblth">Hypertension reading</th>
                    <th class="text-center tblth">BP reading <br />(systolic: 140 mm Hg or higher and<br />/or diastolic: 90 mm Hg or higher)</th>
                    <th class="text-center tblth">Has this person been recommended to visit the PHC  (to consult the doctor)?</th>
                    <th class="text-center tblth">Random blood sugar reading</th>
                    <th class="text-center tblth">Does his/her RBS reading (more than 140mg/dl) fall under diabetic range?</th>
                    <th class="text-center tblth">Has this person been recommended to visit the PHC (to consult the doctor)?</th>
                    <th class="text-center tblth">NCD volunteer name</th>
                    <th class="text-center tblth">NCD volunteer No</th>
                    <th class="text-center tblth">District</th>
                    <th class="text-center tblth">Block</th>
                    <th class="text-center tblth">CHC</th>
                    <th class="text-center tblth">PHC</th>
                    <th class="text-center tblth">Subcenter</th>
                    <th class="text-center tblth">Panchayat</th>
                    <th class="text-center tblth">Village</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (dt.Rows.Count > 0)
                    {
                        int srno = 1;
                        foreach (DataRow dr in dt.Rows)
                        {
                                <tr>
                                    <td class="text-center tbltd">@(srno++)</td>
                                    <td class="text-center tbltd fw-bold"><strong>@dr["ScreeningTypes"]</strong></td>
                                    <td class="text-center tbltd fw-bold"><strong>@NCDNewMIS.Models.CommonModel.FormateDtDMY(dr["SurveyDt"].ToString())</strong></td>
                                    <td class="text-left tbltd"> @dr["HId"] </td>
                                    <td class="text-left tbltd"> @dr["HHHeadName"] </td>
                                    <td class="text-center tbltd"> @dr["NoofMember"] </td>
                                    <td class="text-left tbltd"> @dr["MemberId"] </td>
                                    <td class="text-left tbltd"> @dr["MemberName"] </td>
                                    <td class="text-center tbltd"> @dr["HHHeadMobile"] </td>
                                    <td class="text-center tbltd"> @dr["Age"] </td>
                                    <td class="text-center tbltd"> @dr["Gender"] </td>
                                    <td class="text-left tbltd"> @dr["Aashaplusdevicevalue"] </td>

                                    <td class="text-left tbltd"> @dr["Hypertensionvalue"] </td>
                                    <td class="text-left tbltd"> @dr["HypertensionMeditationValue"] </td>
                                    <td class="text-left tbltd"> @dr["HypertensionMeditationValueStrng"] </td>
                                    <td class="text-left tbltd"> @dr["OtherValueHyper"] </td>

                                    <td class="text-left tbltd"> @dr["Diabitisevalue"] </td>
                                    <td class="text-left tbltd"> @dr["DiabitiseMeditationValue"] </td>
                                    <td class="text-left tbltd"> @dr["DiabitiseMeditationValueStrng"] </td>
                                    <td class="text-left tbltd"> @dr["OtherValueDiabtise"] </td>

                                    <td class="text-left tbltd"> @dr["HypertensionReading"] </td>
                                    <td class="text-left tbltd"> @dr["BpReading"] </td>
                                    <td class="text-left tbltd"> @dr["ReferPHCHypertension"] </td>
                                    <td class="text-left tbltd"> @dr["RandomBloodSugar"] </td>
                                    <td class="text-left tbltd"> @dr["RBSreading"] </td>
                                    <td class="text-left tbltd"> @dr["VisitPHCSugar"] </td>
                                    <td class="text-left tbltd"> @dr["ReportedBy"] </td>
                                    <td class="text-center tbltd "> @dr["ReportedNo"] </td>
                                    <td class="text-left tbltd small"> @dr["District"] </td>
                                    <td class="text-left tbltd small"> @dr["Block"] </td>
                                    <td class="text-left tbltd small"> @dr["CHCN"] </td>
                                    <td class="text-left tbltd small"> @dr["PHC"] </td>
                                    <td class="text-left tbltd small"> @dr["SubCenter"] </td>
                                    <td class="text-left tbltd small"> @dr["GP"] </td>
                                    <td class="text-left tbltd small"> @dr["Village"] </td>
                                </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="31" class="text-center"><strong class="text-danger">Record Not Found !!</strong></td>
                        </tr>
                    }
                }
            </tbody>

        </table>
    </div>

</div>