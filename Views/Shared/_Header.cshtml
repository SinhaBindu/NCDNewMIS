@using Microsoft.AspNet.Identity
<style>
    .logo-abbr {
        border-radius: 4px;
        background: #fff;
        padding: 0 2px
    }
</style>
<div class="nav-header">
    <a href="~/Home/Districtmap" class="brand-logo">
        <img src="~/Content/assets/images/pcilogonew.png" style="width: 100px; height: 50px" alt="PCI Logo" />
        &nbsp;  &nbsp;<strong style="font-size:15px;">  ACT To Change</strong>
        @*<img src="~/Content/assets/images/pci-india.png" class="brand-title" style="width: 87px; height: 28px" alt="" />*@
    </a>
    <div class="nav-control">
        <div class="hamburger">
            <span class="line"></span><span class="line"></span><span class="line"></span>
        </div>
    </div>
</div>


<div class="header">
    <div class="header-content">
        <nav class="navbar navbar-expand">
            <div class="navbar-collapse justify-between">
                <div class="header-left">
                    @*<div class="dashboard_bar max-md:hidden dark:text-white">
                        Dashboard
                    </div>*@
                </div>
                <div class="dashboard-logo">
                    <img src="~/Content/assets/images/simens-logo.svg" class="logo-abbr" style="width: 109px;" alt="" />

                </div>
                <div class="header-right flex items-center h-full">
                    <ul class="flex flex-row h-full">
                        <li class="nav-item  flex items-center relative">
                            <div class="dropdown header-profile2">
                                <a data-dz-dropdown="DzinfoDropdown"
                                   class="dz-dropdown nav-link relative p-2 max-sm:p-0 text-[#464a53] text-lg leading-[1] block duration-500 bg-transparent"
                                   href="javascript:void(0);" role="button" data-bs-toggle="dropdown">
                                    <div class="header-info2 flex items-center text-right">
                                        <div class="header-media">
                                            <img src="~/Content/assets/images/profile/profile.png" alt=""
                                                 class="w-10 h-10   rounded-md">
                                        </div>
                                    </div>
                                </a>
                                <div id="DzinfoDropdown"
                                     class="dz-dropdown-menu dropdown-menu dropdown-menu-end bg-white dark:bg-[#1b1b1b] absolute rounded-md w-[275px] right-0 top-full z-[9] shadow-[0_0_3.125rem_0_rgba(82,63,105,0.15)] py-2 hidden">
                                    <div class="card border-0 mb-0">
                                        <div class="card-header relative flex items-center justify-between bg-transparent py-2 sm:px-[1.25rem] px-4 border-b border-[#E6E6E6] dark:border-[#ffffff1a]">
                                            <div class="flex items-center">
                                                <img src="~/Content/assets/images/profile/profile.png"
                                                     class="avatar avatar-md mr-2.5 h-[2.813rem] w-[2.813rem] inline-block object-cover rounded-md"
                                                     alt="">
                                                <div>
                                                    <h6 class="text-sm">Act-II</h6>
                                                    <span class="text-xs text-body-color">@User.Identity.Name</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer px-0 py-2">
                                            @if (Request.IsAuthenticated)
                                            {
                                                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                                {
                                                    @Html.AntiForgeryToken()

                                                    <a href="javascript:document.getElementById('logoutForm').submit()"
                                                       class="dropdown-item py-[0.6rem] px-[1.25rem] text-base block w-full ai-icon">
                                                        <svg class="profle-logout inline-block"
                                                             xmlns="http://www.w3.org/2000/svg" width="18" height="18"
                                                             viewBox="0 0 24 24" fill="none" stroke="#ff7979"
                                                             stroke-width="2" stroke-linecap="round"
                                                             stroke-linejoin="round">
                                                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                                                            <polyline points="16 17 21 12 16 7"></polyline>
                                                            <line x1="21" y1="12" x2="9" y2="12"></line>
                                                        </svg>
                                                        <span class="ml-2 text-danger text-[13px]">Logout </span>
                                                    </a>
                                                }
                                            }

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
</div>